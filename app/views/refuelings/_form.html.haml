= form_for @refueling do |f|
  -if @refueling.errors.any?
    #error_explanation
      %h2= "#{pluralize(@refueling.errors.count, "error")} prohibited this refueling from being saved:"
      %ul
        - @refueling.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :liter
    = f.text_field :liter
  .actions
    = f.submit 'Save'
