= jqm_header do
  %h1= t(:'.title')

= jqm_content do
  = form_for(resource, as: resource_name, url: password_path(resource_name), validate: true, html: { method: :post }) do |f|
    = render "shared/error_messages", target: resource
    = f.email_field :email, placeholder: User.human_attribute_name("Email"), validate: { presence: true }
    = f.submit t('buttons.send_reset_password_instruction')
