= jqm_header do
  %h1= t(:'.title')

= jqm_content do
  -#= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validations => true) do |f|
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'validate' }) do |f|
    = render "shared/error_messages", :target => resource
    = f.email_field :email, :placeholder => "Email", :class => "required"
    = f.submit t('buttons.send_reset_password_instruction')