%div{ :'data-role' => "collapsible-set" }
  %div{ :'data-role' => "collapsible" }
    %h1= t(:'cars.show.total')
    %ul{ :'data-role' => "listview", :'data-inset' => "true" }
      %li
        = "#{t(:'cars.show.since', :date => l(car.first_refueling.date, :format => :traditional))}"
        .ui-li-aside= " (#{refueling_ago_in_words(car.first_refueling)})"

      %li.numbers= number_to_currency(car.total_amount)
      %li.numbers= "#{number_with_delimiter(car.total_mileage)} #{t('abbr.kilometer')}"
      %li.numbers= "#{number_with_delimiter(car.total_liter)} #{t('abbr.liter')}"

  %div{ :'data-role' => "collapsible", :'data-collapsed' => "true" }
    %h1
      = t(:'cars.show.per_day')
    %ul{ :'data-role' => "listview", :'data-inset' => "true" }
      %li.numbers= number_to_currency(car.amount_per_day)
      %li.numbers= "#{number_with_delimiter(car.mileage_per_day)} #{t('abbr.kilometer')}"
      %li.numbers= "#{number_with_delimiter(car.liter_per_day)} #{t('abbr.liter')}"

  %div{ :'data-role' => "collapsible", :'data-collapsed' => "true" }
    %h1
      = t(:'cars.show.per_month')
    %ul{ :'data-role' => "listview", :'data-inset' => "true" }
      %li.numbers= number_to_currency(car.amount_per_month)
      %li.numbers= "#{number_with_delimiter(car.mileage_per_month)} #{t('abbr.kilometer')}"
      %li.numbers= "#{number_with_delimiter(car.liter_per_month)} #{t('abbr.liter')}"

  %div{ :'data-role' => "collapsible", :'data-collapsed' => "true" }
    %h1
      = t(:'cars.show.per_year')
    %ul{ :'data-role' => "listview", :'data-inset' => "true" }
      %li.numbers= number_to_currency(car.amount_per_year)
      %li.numbers= "#{number_with_delimiter(car.mileage_per_year.to_i)} #{t('abbr.kilometer')}"
      %li.numbers= "#{number_with_delimiter(car.liter_per_year.to_i)} #{t('abbr.liter')}"