= jqm_header do
  %h1= "#{@car}"
  = link_to t('buttons.edit'), edit_car_path(@car), :class => "ui-btn-right"

= jqm_content do
  .car-summary
    %ul{ :'data-role' => "listview", :'data-inset' => "true" }
      = render :partial => 'car_section', :locals => { :car => @car}

    - if @car.more_than_one_refuelings?
      = render :partial => 'fuel_section', :locals => { :car => @car }
      = render :partial => 'total_section', :locals => { :car => @car }

      = link_to t('buttons.charts'), car_chart_path(@car, 'fuel_efficiency'), :'data-role' => "button", :'data-icon' => "arrow-r", :'data-iconpos' => "right"

= jqm_footer(:cars)