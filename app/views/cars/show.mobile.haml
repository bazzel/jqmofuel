= jqm_header(:'data-backbtn' => false) do
  %h1= @car.brand
  = link_to 'Edit', edit_car_path(@car), :class => "ui-btn-right"

= jqm_content do
  %dl
    %dt Car
    %dd= @car.brand
    %dt Model
    %dd= @car.car_model
    - if @car.last_refueling
      %dt Last refueling
      %dd= "#{time_ago_in_words(@car.last_refueling.date)} ago"
      - if @car.fuel_consumption
        %dt Fuel consuption
        %dd= "1/#{@car.fuel_consumption}"
      %dt
        Total
        = " - since #{l(@car.first_refueling.date)} (#{time_ago_in_words(@car.first_refueling.date)} ago)"
      %dd= number_to_currency(@car.total_amount)
      %dd= "#{number_with_delimiter(@car.total_mileage)} km"
      %dd= "#{number_with_delimiter(@car.total_liter)} l"
      %dt Per day
      %dd= number_to_currency(@car.amount_per_day)
      %dd= "#{number_with_delimiter(@car.mileage_per_day)} km/d"
      %dd= "#{number_with_delimiter(@car.liter_per_day)} l/d"
      %dt Per month
      %dd= number_to_currency(@car.amount_per_month)
      %dd= "#{number_with_delimiter(@car.mileage_per_month)} km/mo"
      %dd= "#{number_with_delimiter(@car.liter_per_month)} l/mo"
      %dt Per year
      %dd= number_to_currency(@car.amount_per_year)
      %dd= "#{number_with_delimiter(@car.mileage_per_year.to_i)} km/yr"
      %dd= "#{number_with_delimiter(@car.liter_per_year.to_i)} l/yr"


%div{ :'data-role' => 'footer', :'data-position' => "fixed" }
  %div{ :'data-role' => 'navbar' }
    %ul
      %li= link_to('Refueling', new_refueling_path, :'data-ajax' => false)
      %li= link_to('Cars', cars_path, :class => "ui-btn-active", :'data-ajax' => false)
      %li= link_to('My Info', edit_user_registration_path, :'data-ajax' => false)