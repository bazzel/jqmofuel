- if Rails.env == 'development'
  = javascript_include_tag('http://code.jquery.com/jquery-1.5.js')
  = javascript_include_tag(:defaults)
  = javascript_include_tag('http://code.jquery.com/mobile/1.0a3/jquery.mobile-1.0a3.js')
- else
  = javascript_include_tag('http://code.jquery.com/jquery-1.5.min.js')
  = javascript_include_tag(:defaults)
  = javascript_include_tag('http://code.jquery.com/mobile/1.0a3/jquery.mobile-1.0a3.min.js')

= javascript_include_tag('jquery.validate')
= javascript_include_tag('client_side_validations')

-#  Append your own using content_for :javascripts
= yield :javascripts